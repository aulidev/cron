{
  "name": "@aulidev/cron",
  "version": "1.0.0",
  "description": "A simple cron wrapper for nodejs",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "release": "pnpm run build && changesets publish",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cron",
    "nodejs",
    "schedule",
    "schedular",
    "job",
    "task",
    "timer",
    "crontab"
  ],
  "author": "Sumanta Kabiraj <sumantablog@gmail.com>",
  "contributors": [
    {
      "name": "Sumanta Kabiraj",
      "email": "sumantablog@gmail.com"
    }
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/aulidev/cron.git"
  },
  "bugs": {
    "url": "https://github.com/aulidev/cron/issues"
  },
  "homepage": "https://github.com/aulidev/cron#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.20",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "node-cron": "^3.0.3"
  }
}